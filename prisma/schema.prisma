// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Kelas {
  id   Int    @id @default(autoincrement())
  arab String
  wali String
  indo String
}

model Murid {
  namaIndo  String
  namaArab  String?
  kelas     String
  id        Int        @id
  Kehadiran Kehadiran?
  Lughoh    Lughoh?
  MPU       MPU?
  Ulum      Ulum?
  Quran     Quran?
  Qiroah    Qiroah[]
}

model Kehadiran {
  user    Murid @relation(fields: [userId], references: [id])
  userId  Int   @id
  sakit   Int?
  izin    Int?
  lainnya Int?
}

model Lughoh {
  user    Murid  @relation(fields: [userId], references: [id])
  userId  Int    @id
  nilai   String
  catatan String
}

model MPU {
  user    Murid  @relation(fields: [userId], references: [id])
  userId  Int    @id
  nilai   String
  catatan String
}

model Ulum {
  user    Murid  @relation(fields: [userId], references: [id])
  userId  Int    @id
  nilai   String
  catatan String
}

model Qiroah {
  user    Murid  @relation(fields: [userId], references: [id])
  userId  Int    @id
  nilai   String
  catatan String
}

model Quran {
  user    Murid  @relation(fields: [userId], references: [id])
  userId  Int    @id
  maqra   String
  nilai   String
  miqdar  String
  catatan String
}
